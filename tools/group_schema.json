{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://simple-answer.com/schemas/group.json",
  "title": "Simple Answer Group Schema",
  "description": "Esquema para validar la estructura de grupos de memoria v2",
  "type": "object",
  "required": ["group_id", "title", "status", "created_date", "author", "objective", "success_criteria"],
  "properties": {
    "group_id": {
      "type": "string",
      "pattern": "^[A-Z0-9_-]+$",
      "description": "Identificador único del grupo"
    },
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100,
      "description": "Título descriptivo del grupo/proyecto"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "active", "completed", "cancelled", "on_hold"],
      "description": "Estado actual del grupo"
    },
    "created_date": {
      "type": "string",
      "format": "date-time",
      "description": "Fecha de creación del grupo (ISO-8601)"
    },
    "author": {
      "type": "string",
      "description": "Autor que creó el grupo"
    },
    "objective": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Objetivo principal del grupo - qué se quiere lograr"
    },
    "success_criteria": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Criterios específicos para considerar el grupo completado"
    },
    "constraints": {
      "type": ["string", "null"],
      "maxLength": 300,
      "description": "Restricciones, limitaciones o consideraciones especiales"
    },
    "checklist": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["step", "description", "completed"],
        "properties": {
          "step": {
            "type": "integer",
            "minimum": 1,
            "description": "Número del paso"
          },
          "description": {
            "type": "string",
            "minLength": 5,
            "maxLength": 200,
            "description": "Descripción del paso"
          },
          "completed": {
            "type": "boolean",
            "description": "Si el paso está completado"
          },
          "notes": {
            "type": ["string", "null"],
            "maxLength": 500,
            "description": "Notas adicionales del paso"
          }
        }
      },
      "description": "Lista de pasos del grupo"
    },
    "technical_summary": {
      "type": "object",
      "properties": {
        "technologies": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tecnologías involucradas"
        },
        "components": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Componentes o módulos afectados"
        },
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Archivos principales del grupo"
        }
      },
      "description": "Resumen técnico del grupo"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "priority": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"],
          "description": "Prioridad del grupo"
        },
        "estimated_duration": {
          "type": "string",
          "description": "Duración estimada (ej: '2 days', '1 week')"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Etiquetas para categorizar el grupo"
        },
        "related_groups": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "IDs de grupos relacionados"
        }
      },
      "description": "Metadatos adicionales del grupo"
    }
  }
}
