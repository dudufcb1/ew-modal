{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://simple-answer.com/schemas/index.json",
  "title": "Simple Answer Index Schema",
  "description": "Esquema para el Ã­ndice mutable de memoria v2",
  "type": "object",
  "patternProperties": {
    "^[A-Z0-9_-]+$": {
      "type": "object",
      "required": [
        "task_id",
        "status",
        "revision",
        "timestamp"
      ],
      "properties": {
        "task_id": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "todo",
            "doing",
            "review",
            "done",
            "blocked",
            "info"
          ]
        },
        "revision": {
          "type": "integer",
          "minimum": 1
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "snapshot_id": {
          "type": "string"
        },
        "group_id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "last_modified_by": {
          "type": "string"
        }
      }
    }
  }
}